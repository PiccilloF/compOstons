# we declare postgres as PGUSER
export PGUSER=postgres

# run the script
pwd
psql -f ./create_db.sql

# we remove postgres as PGUSER
unset PGUSER

# we add the init of table's creation

sqitch init compostons --engine pg

sqitch target add heroku-compostons postgres://sreviyxbtbsmff:d4fddc23196af3d40b83eb81380c358f3c240c5f29452c3b5bbe5c77de1a651b@ec2-54-228-139-34.eu-west-1.compute.amazonaws.com:5432/d4a13ngnkt8jc6

sqitch add init -n "create tables"


# we call sqitch's script to deploy
bash sqitch_deploy
